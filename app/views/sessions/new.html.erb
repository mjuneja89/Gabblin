
<% content_for :head do %>
     
<title>Sign In || Gateway to the best communities!</title>

<meta name="description" content= "'Gabblin' is a collection of the best communities on the internet. Connect with like minded people and share your opinions, interests and ideas.">
<meta property="og:site_name" content="gabblin">
<meta property="og:title" content="Sign In || Gateway to the best communities!">
<meta property="og:url" content="http://www.gabblin.com/signin" />
<meta property="og:image" content="<%= image_url('gabblin.jpg') %>">
<meta property="og:image:width" content="300">
<meta property="og:image:height" content="300">

<script type="text/javascript">

$(document).ready(function(){

$(".submitbtn").click(function(){
  $(".submitbtn").hide();
  $("#progressbtn").show(); 
});

});

</script>

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
