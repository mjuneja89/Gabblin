        <table border="0" cellpadding="0" cellspacing="0"> 
          <tr>
            <td height="1" width="100%" style="font-size: 1px; line-height: 1px;">
            &nbsp;
            </td>
          </tr>
        </table>
        <table border="0" align="left" cellpadding="0" cellspacing="0">
          <tbody>
          <tr>
            <td align="left">
              <table border="0" cellpadding="0" cellspacing="0" width="100">
                <tr>
                  <td align="center" bgcolor="black" width="100" style="-moz-border-radius: 0px; -webkit-border-radius: 0px; border-radius: 0px;">
                    <%= link_to community_post_url(@post.community, @post), :style => "padding: 10px;width:100px;display: block;text-decoration: none;border:0;text-align: center;font-weight: bold;font-size: 13px;font-family: Tahoma, serif;color: #ffffff;background: black;border: 1px solid black;-moz-border-radius: 0px; -webkit-border-radius: 0px; border-radius: 0px;line-height:15px;", :class => "button_link;" do %>
                      read more
                    <% end %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          </tbody>
        </table>
        <table border="0" cellpadding="0" cellspacing="0"> 
          <tr>
            <td height="5" width="100%" style="font-size: 5px; line-height: 5px;">
